{
  "name": "@jabbey/atlas",
  "version": "0.1.0",
  "description": "Design system for Mantle, Conduit, and Stratum - Svelte 5 components with Tailwind v4",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "default": "./dist/tokens/index.js"
    },
    "./styles/base.css": "./dist/styles/base.css",
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "svelte": "./dist/patterns/index.js",
      "default": "./dist/patterns/index.js"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "svelte": "./dist/templates/index.js",
      "default": "./dist/templates/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package -o dist",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "bits-ui": "^1.0.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.15.0",
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "prettier-plugin-svelte": "^3.3.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "tailwind",
    "tailwindcss",
    "design-system",
    "components",
    "ui"
  ],
  "author": "Joe Abbey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joeabbey/atlas.git"
  }
}
